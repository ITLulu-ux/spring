<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myapp.traffic.mapper.TrafficMapper">

    <select id="selectAll">
        SELECT * FROM Traffic
    </select>

    <select id="selectById">
        SELECT * FROM Traffic WHERE id=#{id}
    </select>

    <select id="selectBysumTime">
        SELECT * FROM Traffic WHERE tmName=#{sumTime}
    </select>

    <select id="selectOrderByconZoneNameDesc">
        SELECT * FROM Traffic ORDER BY tcsName Desc
    </select>

    <select id="selectAllOrderBy">
        SELECT * FROM Traffic ORDER BY ${order} ${dir}
    </select>

    <select id="selecttrafficAmount">
        SELECT * FROM Traffic WHERE trafficAmout=#{trafficAmout}
    </select>

    <select id="selectcarType">
        SELECT * FROM Traffic WHERE carType=#{carType}
    </select>

    <select id="selectAllCount">
        SELECT COUNT(*) FROM Traffic
    </select>

    <select id="findById">
        SELECT * FROM Traffic WHERE id = #{id}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="entity.id">
        INSERT INTO Traffic(tmName, tcsName, trafficAmout, carType) VALUES(#{entity.tmName}, #{entity.tcsName},
        #{entity.trafficAmout}, #{entity.carType})
    </insert>

    <update id="update">
        UPDATE Traffic
        SET tmName=#{entity.tmName},
            tcsName=#{entity.tcsName},
            trafficAmout=#{entity.trafficAmout},
            carType=#{entity.carType}
        WHERE id=#{entity.id}
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM Traffic WHERE id=#{id}
    </delete>

    <delete id="deleteById">
        DELETE FROM Traffic WHERE id=#{entity.id}
    </delete>

    <delete id="deleteAll">
        DELETE FROM Traffic
    </delete>
</mapper>